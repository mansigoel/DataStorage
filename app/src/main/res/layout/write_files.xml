<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/we1"
            android:text="Thought for the day :)"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="@string/abc_action_bar_home_description"
            android:textColor="@color/yellow_900"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todo"
            android:textColor="@color/orange_A400"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/we1"
            android:textAlignment="center"
            android:hint="What you thinking today"
            android:textColorHint="@color/green_A200"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read"
            android:id="@+id/button2"
            android:theme="@style/Skip"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red_A700"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/todo"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read"
            android:id="@+id/button3"
            android:theme="@style/Skip"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red_A700"
            android:layout_below="@+id/button2"
            android:layout_marginTop="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write"
            android:id="@+id/button5"
            android:theme="@style/Skip"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red_A700"
            android:layout_alignTop="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write"
            android:id="@+id/button6"
            android:theme="@style/Skip"
            android:textColor="@color/white"
            android:textColorHighlight="@color/red_A700"
            android:layout_alignTop="@+id/button3"
            android:layout_toEndOf="@+id/button3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internal Storage"
            android:paddingRight="15dp"
            android:textSize="15dp"
            android:textColor="@color/light_green_A700"
            android:id="@+id/textView2"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="External Storage"
            android:id="@+id/textView"
            android:textSize="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/light_green_A700"
            android:layout_alignBaseline="@+id/button3"
            android:layout_alignBottom="@+id/button3"
            android:layout_toStartOf="@+id/button3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/green_A700"
            android:id="@+id/quote"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>

    </RelativeLayout>

</ScrollView>