<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/we1"
            android:text="Welcome to the "
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="@string/abc_action_bar_home_description"
            android:textColor="@color/material_deep_teal_500"
            android:layout_marginTop="77dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:fontFamily="@string/abc_action_bar_home_description"
            android:textColor="@color/material_deep_teal_500"
            android:text="Data Storage Demo!!"
            android:id="@+id/we2"
            android:layout_below="@+id/we1"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Made with love by Mansi !!"
            android:id="@+id/cp"
            android:textSize="20dp"
            android:textColor="@color/pink_A200"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shared Preferences"
            android:id="@+id/button"
            android:theme="@style/Yes"
            android:layout_below="@+id/we2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writing Files"
            android:id="@+id/button2"
            android:theme="@style/Yes"
            android:layout_below="@+id/button"
            android:layout_centerVertical="true"
            android:layout_marginTop="38dp"
        android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SQLite Database"
            android:id="@+id/button3"
            android:theme="@style/Yes"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp" />


    </RelativeLayout>

</ScrollView>